// подключение шрифтов
@font-face
  font-family "Muller"
  src url("../../fonts/MullerRegular.otf")
  font-style normal
  font-weight normal
@font-face
  font-family "MullerBold"
  src url("../../fonts/MullerBold.otf")
  font-style normal
  font-weight normal
@font-face
  font-family "MullerLight"
  src url("../../fonts/MullerLight.otf")
  font-style normal
  font-weight normal
@font-face
  font-family "MullerLightItalic"
  src url("../../fonts/MullerLightItalic.otf")
  font-style italic
  font-weight normal

h1
  font-size 30px
  font-family Muller

body
  background-color #e4e4e4
  font-family Muller, sans-serif

// классы шрифтов
.font-reg
  font-family MullerRegular !important
.font-bold
  font-family MullerBold !important
.font-light
  font-family MullerLight !important
.font-light-i
  font-family MullerLightItalic !important

// подсветка бордюров
.brd
  border 1px solid
.brd-r
  border 1px solid red
.brd-b
  border 1px solid black
.brd-w
  border 1px solid #fff
.brd-g
  border 1px solid green
.brd-b
  border 1px solid blue

