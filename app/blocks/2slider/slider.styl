// Слайдер
.slider
	display block
	// height 750px
	background-color lightgrey
	color #fff
	font-size 30px
	text-transform uppercase
	background-image url(../../images/slider.png)
	background-size cover

.slider__button
	max-width 180px

.slider__text
	height 100%
	display flex
	flex-direction column
	justify-content center
	line-height 40px

// форма в слайдере
.slider-form
	background-color rgba(#000000, .5)
	height 100%
	display flex
	flex-direction column
	justify-content center
	text-align center
	padding 20px 30px

.slider-form__title
	margin-bottom 40px
	font-size 25px
	text-transform none
	text-align center

	// таймер
.slider__timer-count
	background linear-gradient(rgba(#000000, 0), rgba(#000000, .3))
	padding 10px 20px
	margin-bottom 10px
	display flex
	justify-content space-between

.slider__timer-count-item
	display inline-block

.slider__timer-ttl
	margin-bottom 5px
	font-size 14px
	text-align center
.slider__timer-count-item-num
	margin-bottom 3px
	font-size 30px
	font-family MullerLight
.slider__timer-count-item-txt
	font-size 14px
	color #969696

	// форма
.slider__input,
.slider__submit
	margin 10px 0
	width 100%
	padding 11px
	font-size 17px
	color #c8c8c8
	text-align center

.slider__input
	background-color rgba(#ffffff, 0.2)
	border none
	color #c8c8c8
.slider__input::placeholder
	color #c8c8c8


.slider__submit
	color #fff
	margin 30px 0
	height 45px
	box-shadow 0 5px 40px 0 rgba(0, 0, 0, .4)

.btn-simple
	color #fff
	background linear-gradient(#ffb063, #fa4a2d)
	border none
.btn-simple:focus
	outline none

	// адаптация
@media screen and (max-width 375px)
	.slider__txt
		font-size 25px
	.slider-form
		padding 20px 15px

// /Слайдер
