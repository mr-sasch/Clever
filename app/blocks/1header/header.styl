// Шапка

// Шапка верхняя
.header__top
	color txtGreyHeader
	background-color clrBgGreyHeader
	align-items center
	font-weight 300
	padding 5px 0

.header-socials
	color txtGreyHeader

@media screen and (max-width 350px)
	.header__phones
		font-size 15px

.header-icon-color
	color headerIcons

.header__top-item-separator
	height 15px
	border-left 1px solid headerIcons

.header__top-item
	position relative
.header__top-item:after
	position absolute
	left 0
	font-family FontAwesome

// Шапка нижняя
.header__bottom
	background-color #fff

.header__bottom-left
	height 100%

.header__bottom-row
	height 60px

@media screen and (max-width 767px)
	.header__bottom-row
		height inherit

.header-nav__item
	font-weight 600

.header-logo-col
	position relative
	height 100%
.header-logo
	position absolute
	top 0
	left 15px

.header-btn
	padding 7px 0
	width 100%
	font-weight 300
	text-align center
	color #fff
	background-color grey
	border none

.header-button
	width 180px
// /Шапка
