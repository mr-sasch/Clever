// Шапка

// Шапка верхняя
.header__top
	color txtGreyHeader
	background-color clrBgGreyHeader
	align-items center
	font-weight 300
	padding 5px 0

.header-socials
	color txtGreyHeader

.header-icon-color
	color headerIcons

.header__top-item-separator
	height 15px
	border-left 1px solid headerIcons

.header__top-item
	position relative
.header__top-item:after
	position absolute
	left 0
	font-family FontAwesome

// Шапка нижняя
.header__bottom
	background-color #fff
	max-height 70px
.header-nav__item
	font-weight 600

.header-btn
	padding 7px 0
	width 100%
	font-weight 300
	text-align center
	color #fff
	background-color grey
	border none

.header-button
	width 180px
// /Шапка
