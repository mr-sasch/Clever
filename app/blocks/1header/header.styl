// Шапка

// Шапка верхняя
.header__top
	color txtGreyHeader
	background-color clrBgGreyHeader
	align-items center
	padding 5px 0
	font-family MullerLight
	font-size 14px

.header-socials
	font-size 20px
	color #b0b0b0

.header-icon-color
	font-size 16px
	color #b0b0b0
	vertical-align middle
	margin -2px 0 4px

.header__top-right
	font-size 16px
	color #b0b0b0
.header-socials__vk
	color #45668e
.header-socials__inst
	color #f1742f
	margin-bottom 1px

.header-address-icon
	float left

.header__top-item-separator
	height 15px
	border-left 1px solid headerIcons
	margin-bottom 3px

.header__top-item
	position relative
	line-height 18px
.header__top-item:after
	position absolute
	left 0
	font-family FontAwesome

// Шапка нижняя
.header__bottom
	position relative
	z-index 1000
	background-color #fff
	box-shadow 0 5px 40px 0 rgba(0, 0, 0, .4)

// Фиксируем шапку
.header__logo
	width 233px
	transition .2s ease
.header__bottom-fixed
	position fixed
	top 0
	width 100%
	background-color #fff
	.header__btn
		padding 16px 0
	.header__btn.header__btn-kar,
	.header__btn.header__btn-jal
		padding-top 17px
		padding-bottom 15px
		text-transform uppercase
		color #404040
	.header__logo
		width 160px
@media screen and (max-width 992px)
	.header__logo
		width 233px
	.header__bottom-fixed
		.header__logo
			width 233px
@media screen and (max-width 576px)
	.header__logo
		width 160px
	.header__bottom-fixed
		.header__logo
			width 160px

// /Фиксируем шапку

.header__btn-jal
	border-right 1px solid #dddddd

.header__btn-jal:hover
	font-family MullerBold
	text-decoration none
	color txtMenuBtnOrange
.header__btn-kar:hover
	font-family MullerBold
	text-decoration none
	color txtMenuBtnOrange

@media screen and (max-width 992px)
	.header__btn-jal
		border-right 0
@media screen and (min-width 992px)
	.header__logo
		position absolute
		top 5px
		left 15px
		width 233px
		transition .2s ease
@media screen and (max-width 576px)
	.header__btn-col
		padding 0

.header__btn.header__btn-kar,
.header__btn.header__btn-jal
	padding-top 27px
	padding-bottom 25px
	text-transform uppercase
	color #404040

@media screen and (max-width 992px)
	.header__btn.header__btn-kar,
	.header__bottom-fixed .header__btn.header__btn-kar
		padding-top 5px
		padding-bottom 5px
	.header__btn.header__btn-jal,
	.header__bottom-fixed .header__btn.header__btn-jal
		padding-top 15px
		padding-bottom 5px

.header__btn-lnks.active,
.header__bottom-fixed .header__btn-lnks.active,
.header__btn-lnks:hover,
.header__bottom-fixed .header__btn-lnks:hover
	font-family MullerBold
	color txtMenuBtnOrange

.header__btn
	padding 26px 0
	font-family MullerBold
	font-size 18px
	transition .2s ease
@media screen and (max-width 375px)
	.header__btn
		font-size 14px

.header__btn-callback
	font-family MullerLight
	cursor pointer
	color #fff
	background linear-gradient(#1673c4, #00427b)
.header__btn-callback:hover
	background linear-gradient(#1669b1, #1669b1)


// /Шапка
