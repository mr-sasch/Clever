// Шапка

// Шапка верхняя
.header__top
	color #fff
	background-color grey
	align-items center
	font-weight 300

.header__top-item-separator
	height 15px
	border-left 1px solid #fff

.header__top-item
	position relative
.header__top-item:after
	position absolute
	left 0
	font-family FontAwesome
.header__top-item-address:after
	content '\f095'
.header__top-item-clock:after
	content '\f017'
.header__top-item-phone:after
	content '\f095'

// Шапка нижняя
.header__bottom
	background-color #fff
.header-nav__item
	font-weight 600

.header-btn
	padding 7px 0
	width 100%
	font-weight 300
	text-align center
	color #fff
	background-color grey
	border none

.header-button
	width 180px
// /Шапка
