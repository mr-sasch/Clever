mixin header()
	+b.header&attributes(attributes)
		block
		// Хэдер верхний
		.header__top
			.container
				.d-flex.justify-content-between.align-items-start.align-items-sm-center.flex-column.flex-sm-row.py-lg-2
					.header__top-left.d-flex.flex-column.flex-xl-row.py-2.py-lg-0
						.header__top-item.pr-sm-0.py-1.py-xl-0 
							.fa.fa-map-marker.pr-2.header-icon-color
							| г.Симферополь
						// Разделитель
						.header__top-item-separator.mx-3.d-none.d-xl-inline-block
						.header__top-item.px-sm-0.py-1.py-xl-0
							.fa.fa-clock-o.header-icon-color.mr-2
							| Пн-Пт: 9:00 до 18:00
						// Разделитель
						.header__top-item-separator.mx-3.d-none.d-xl-inline-block
						.header__top-item.px-sm-0.py-1.py-xl-0.header__phones
							.fa.fa-phone.header-icon-color.mr-2
							| +7(123)
							strong(style='font-weight: 600; color: #fff') 456-78-90
							| , 
							| +7(123)
							strong(style='font-weight: 600; color: #fff') 098-76-65 
							span.header-icon (whatsapp, viber)
					.header__top-right.header-icon-color.pb-2.pb-lg-0.d-flex.flex-wrap.justify-content-center.align-items-center Мы в соц.сетях:
						.fa.fa-vk.pl-2.pr-1.py-1.header-socials
						.fa.fa-instagram.py-1.header-socials
		// Хэдер нижний
		.header__bottom
			.container.py-1
				.row.header__bottom-row.justify-content-between.align-items-center
					.col-3.header-logo-col
						img(src='images/logo.png').header-logo
					.col.header__bottom-left
						.row.justify-content-end
							.col.header-nav.d-flex.px-3.flex-column.flex-lg-row.py-3.py-sm-1
								.header-nav__item.px-2.py-2.py-sm-1 Жалюзи
								.header-nav__item.px-2.py-2.py-sm-1 Электрокарнизы
							.col-3.button.header-btn(data-toggle='modal' data-target='#callBack') Обратный звонок
								
							mixin headerBtn(text, modalId)
								button.header-btn(data-toggle='modal' data-target= modalId)= text
							//- +headerBtn('Обратный звонок', '#callBack')
							mixin modalCallBack()
								.modal.fade#callBack(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
									.modal-dialog.modal-dialog-centered(role="document")
										.modal-content
											.modal-header
												h5.modal-title#exampleModalLongTitle Modal title
												button.close(type="button" data-dismiss="modal" aria-label="Close")
													span(aria-hidden="true") &times;
											.modal-body выаывапывап
											.modal-footer
												button.btn.btn-secondary(type="button" data-dismiss="modal") Close
												button.btn.btn-primary(type="button") Save changes
							+modalCallBack()
