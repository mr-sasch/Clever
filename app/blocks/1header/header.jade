mixin header()
	+b.header&attributes(attributes)
		block
		// Хэдер верхний
		.header__top#header__top
			.container
				.d-flex.justify-content-between.align-items-start.align-items-sm-center.flex-column.flex-sm-row.py-lg-1
					.header__top-left.d-flex.flex-column.flex-xl-row.py-2.py-lg-0
						.header__top-item.pr-sm-0.py-1.py-xl-0 
							.fas.fa-map-marker-alt.pr-2.header-icon-color
							| г.Симферополь
						// Разделитель
						.header__top-item-separator.mx-3.d-none.d-xl-inline-block
						.header__top-item.px-sm-0.py-1.py-xl-0
							.fas.fa-clock.header-icon-color.mr-2
							| Пн-Пт: 9:00 до 18:00
						// Разделитель
						.header__top-item-separator.mx-3.d-none.d-xl-inline-block
						.header__top-item.header__phones.d-flex.flex-column.flex-lg-row.align-items-lg-center
							.header__phones1.pb-1
								.fa.fa-phone.header-icon-color.mr-2
								| +7 (123)
								strong(style='font-weight: 600; color: #fff').font-bold 456-78-90
								span(style='margin-right: 5px;') ,
							.header__phones2
								| +7 (123)
								strong(style='font-weight: 600; color: #fff').font-bold 098-76-65 
								span.header-icon-color (whatsapp, viber)
					.header__top-right.header-icon-color.pb-2.pb-lg-0.d-flex.flex-wrap.justify-content-center.align-items-center Мы в соц.сетях:
						a.footer-soc-a(href='https://vk.com' target="_blank")
							.fab.fa-vk.pl-2.pr-1.py-1.header-socials
						a.footer-soc-a(href='https://www.instagram.com' target="_blank")
							.fab.fa-instagram.py-1.header-socials
		// Хэдер нижний
		.header__bottom#headerBottom
			.container.h100p
				.row
					a(href='#').col-12.col-sm-6.col-lg-4.d-flex.align-items-center.justify-content-center.pt-3.pt-lg-0
						img(src='images/logo.png').header__logo.mb-3.mb-lg-0
					.col-12.col-sm-6.px-sm-auto.col-lg-8.header__btn-col
						.d-flex.flex-column.flex-lg-row.justify-content-lg-end
							a(href='#jaluziAnchor')#jalBtn.px-4.header__btn.header__btn-jal.active.d-flex.align-items-center.justify-content-center.py-3.pt-sm-4.pb-sm-2.py-lg-0 Жалюзи
							a(href='#karniziAnchor')#karBtn.px-4.header__btn.header__btn-kar.d-flex.align-items-center.justify-content-center.py-3 Электрокарнизы
							.px-4.header__btn.header__btn-callback.d-flex.align-items-center.justify-content-center.py-4 Обратный звонок
			mixin headerBtn(txt)
				.btn-simple= txt
