mixin header()
	+b.header&attributes(attributes)
		block
		// Хэдер верхний
		.header__top
			.container
				.d-flex.justify-content-between.align-items-start.align-items-sm-center.flex-column.flex-sm-row.py-lg-2
					.header__top-left.d-flex.flex-column.flex-lg-row.py-2.py-lg-0
						.header__top-item.pr-sm-0.pr-lg-2.py-1.py-lg-0 
							.fa.fa-map-marker.pr-2
							| г.Симферополь
						.header__top-item-separator.d-none.d-lg-inline-block
						.header__top-item.px-sm-0.px-lg-2.py-1.py-lg-0
							.fa.fa-clock-o.px-2
							| Пн-Пт: 9:00 до 18:00
						.header__top-item-separator.d-none.d-lg-inline-block
						.header__top-item.px-sm-0.px-lg-2.py-1.py-lg-0 
							.fa.fa-phone.px-2
							| +7(123)
							strong(style='font-weight: 600;') 456-78-90, 
							| +7(123)
							strong(style='font-weight: 600;') 098-76-65 
							span(style='color: lightgrey;') (whatsapp, viber)
					.header__top-right.pb-2.pb-lg-0 Мы в соц.сетях:
						.fa.fa-vk.pl-2.pr-1
						.fa.fa-instagram
		// Хэдер нижний
		.header__bottom
			.container.py-3
				.d-flex.justify-content-between.flex-column.align-items-center.flex-md-row
					img(src='images/logo-mono.png').header-logo
					.header__bottom-left.d-flex.align-items-center.flex-column.flex-sm-row
						.header-nav.d-flex.px-3.flex-column.flex-lg-row.py-3.py-sm-1
							.header-nav__item.px-2.py-2.py-sm-1 Жалюзи
							.header-nav__item.px-2.py-2.py-sm-1 Электрокарнизы
						.header-button
							mixin headerBtn(text, modalId)
								button.header-btn(data-toggle='modal' data-target= modalId)= text
							+headerBtn('Обратный звонок', '#callBack')
							mixin modalCallBack()
								.modal.fade#callBack(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
									.modal-dialog.modal-dialog-centered(role="document")
										.modal-content
											.modal-header
												h5.modal-title#exampleModalLongTitle Modal title
												button.close(type="button" data-dismiss="modal" aria-label="Close")
													span(aria-hidden="true") &times;
											.modal-body выаывапывап
											.modal-footer
												button.btn.btn-secondary(type="button" data-dismiss="modal") Close
												button.btn.btn-primary(type="button") Save changes
							+modalCallBack()
