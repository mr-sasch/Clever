.getcat
	padding 60px 0
	display block
	background url('../../images/getcat-bg.png')
	background-position center
	background-size cover

.title-big
	margin 20px 0
	font-family MullerLight
	font-size 30px
	text-align center
	color #fff

.getcat__input
	margin 15px
	padding 10px 20px
	text-align center
	color #6f6f6f
	background-color rgba(#ffffff, .6)
	border none
.getcat__input:focus
	color #2f2f2f
	background-color rgba(#ffffff, .9)

.getcat__note
	margin 20px 0
	font-family MullerLight
	font-size 14px
	text-align center
	color #b9b9b9

.orange-star
	color #ff7603

.getcat__btn
	width 250px
	height 40px
	text-align center
	cursor pointer
	.btn-simple
		padding 12px 0
