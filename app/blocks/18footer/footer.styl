// Футер
.footer
	padding-top 30px
	display block
	background-color #383838
.footer__title
	position relative
	margin-bottom 30px
	padding-bottom 10px
	font-family MullerLight
	font-size 24px
	line-height 18px
	color #b7b7b7
.footer__title:after
	position absolute
	left 0
	bottom 0
	width 100%
	height 1px
	content ''
	border-bottom 1px solid grey

.footer__li
	margin 20px 0
	font-family MullerLight
	font-size 16px
	color #b0b0b0

.footer__ul-a:hover
	color #b0b0b0

.footer-text
	font-family MullerLightItalic
	color #646464

.footer-contacts
	font-family MullerLight
	font-size 16px
	line-height 24px
	color #b0b0b0

.f-cont
	position relative
	margin-bottom 6px
	padding-left 30px

.f-icon
	position absolute
	top 6px
	left 0
	color #646464

.footer__socials
	margin-top 30px

.footer-soc-a:hover
	text-decoration none


.footer__socials-title
	margin-bottom 5px
	color #b0b0b0
.footer__socials-item
	position relative
	margin-right 10px
	width 45px
	height 45px
	font-size 30px
	color #646464
	border 3px solid #646464
.footer__socials-item.fa-instagram
	font-size 24px
.footer__socials-item:before
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.copyright__wrap
	margin-top 90px
	font-size 16px
	line-height 18px
	color lightgrey
	background-color grey

.copyright
	padding 15px 0
	font-family Muller
	font-size 16px
	text-align center
	color #a1a1a1

.copyright__wrap
	background-color #00427b
// /Футер
