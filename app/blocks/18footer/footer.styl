// Футер
.footer
	padding-top 30px
	display block
	background-color #383838
.footer__title
	position relative
	margin-bottom 30px
	font-family MullerBold
	font-size 18px
	line-height 18px
	color #fff
	text-transform uppercase

.footer__li
	margin 20px 0
	font-family MullerLight
	font-size 16px
	color #b0b0b0

.footer__ul-a:hover
	color #b0b0b0

.footer-text
	font-family MullerLightItalic
	color #646464

.footer-contacts
	font-family MullerLight
	font-size 16px
	line-height 24px
	color #b0b0b0

.f-cont
	position relative
	margin-bottom 6px
	padding-left 30px

.f-icon
	position absolute
	top 6px
	left 0
	color #646464
	line-height 11px

.footer__socials
	margin-top 30px

.footer-soc-a:hover
	text-decoration none


.footer__socials-title
	margin-bottom 5px
	color #b0b0b0
.footer__socials-item
	position relative
	margin-right 10px
	width 45px
	height 45px
	font-size 30px
	background-color #474747
	border 3px solid #474747
.footer__socials-item.fa-instagram
	font-size 24px

.footer__socials-item:before
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.footer__socials-item.fa-vk
	color #45668e
.footer__socials-item.fa-instagram
	color #ff5d25

.footer__map
	min-height 257px

.copyright__wrap
	margin-top 90px
	font-size 16px
	line-height 18px
	color lightgrey
	background-color grey

.copyright
	padding 15px 0
	font-family Muller
	font-size 16px
	text-align center
	color #a1a1a1

.copyright-logo
	position relative
	text-align center
.copyright-logo:after
	position absolute
	content ''
	width 100%
	height 2px
	background-color #606060
	left 0
	top 50%
	transform translateY(-50%)
.footer__logo-img
	background-color #383838
	z-index 10
	position relative
	padding 0 20px

.footer-contacts-col
	height 100%

// /Футер
