.whyus
	padding 50px 0
	display block
	overflow hidden
	background-color #fff

.whyus__item-wrap
	padding 0

.whyus__item
	position relative
	padding-top 28px
	// z-index 20

.whyus__item:before
	position absolute
	z-index 10
	top 28px
	right -100%
	width 2000px
	height 24px
	content ''
	background #ebebeb
.whyus__item:after
	position absolute
	z-index 10
	top 28px
	width 2000px
	height 24px
	content ''
	background #ebebeb

.whyus__item-ttl
	position relative
	z-index 20
	padding 2px 0 0
	padding-left 90px
	font-size 18px
	line-height 24px
	color #222
	text-transform uppercase
.whyus__item-ttl-bg
	position absolute
	z-index -1
	top 0
	left 0
	width 100%
	height 24px
	background-color #ebebeb

.whyus__item-txt
	padding 6px 0
	padding-left 90px
	color #666

.whyus__item-numb
	position absolute
	z-index 20
	top 0
	left 0
	padding-top 5px
	display flex
	justify-content center
	align-items center
	width 82px
	height 82px
	font-family MullerBold
	font-size 48px
	color #fff
	border 8px solid #fff
	border-radius 50%
	background-color #00427b
