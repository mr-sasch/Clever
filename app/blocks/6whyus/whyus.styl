.whyus
	padding 50px 0
	display block
	background-color #fff

.whyus__item-wrap
	padding 0

.whyus__item
	position relative
	padding-top 26px

.whyus__item-ttl
	font-size 18px
	color #222
	text-transform uppercase
	background-color #ebebeb
	padding 8px 0 4px
	padding-left 90px

.whyus__item-txt
	padding 6px 0
	padding-left 90px
	color #666

.whyus__item-numb
	font-size 48px
	background-color #00427b
	color #fff
	width 82px
	height 82px
	display flex
	justify-content center
	align-items center
	border 8px solid #fff
	border-radius 50%
	font-family MullerBold
	padding-top 5px
	position absolute
	top 0
	left 0
